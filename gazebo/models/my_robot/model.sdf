<?xml version='1.0'?>
<sdf version='1.4'>
  <model name="my_robot">
    <static>false</static>
    <link name='chassis'>
      <pose>0 0 0 0 0 0</pose>
    
      <collision name='collision'>
        <geometry>
          <box>
            <size>1 1 .3</size>
          </box>
        </geometry>
      </collision>
    
      <visual name='visual'>
        <geometry>
          <box>
            <size>1 1 .3</size>
          </box>
        </geometry>
      </visual>
    </link>

    <link name='aruco_marker_link'>
      <pose>0 0 0.15 0 1.5707 0</pose>
      <visual name="visual">
        <geometry>
          <mesh>
            <uri>model://aruco-420/meshes/aruco-420.dae</uri>
          <scale>1.0 1.0 1.0</scale>
          </mesh>
        </geometry>
      </visual>
    </link>

    <link name="front_left_wheel">
      <pose>0.4 0.525 -0.15 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>.15</radius>
            <length>.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <material> <!-- Wheel material -->
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
            <specular>0 0 0 0</specular>
            <emissive>0 0 0 1</emissive>
        </material> <!-- End wheel material -->
        <geometry>
          <cylinder>
            <radius>.15</radius>
            <length>.05</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <link name="front_right_wheel">
      <pose>0.4 -0.525 -0.15 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>.15</radius>
            <length>.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <material> <!-- Wheel material -->
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
            <specular>0 0 0 0</specular>
            <emissive>0 0 0 1</emissive>
        </material> <!-- End wheel material -->
        <geometry>
          <cylinder>
            <radius>.15</radius>
            <length>.05</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <link name="rear_left_wheel">
      <pose>-0.4 0.525 -0.15 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>.15</radius>
            <length>.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <material> <!-- Wheel material -->
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
            <specular>0 0 0 0</specular>
            <emissive>0 0 0 1</emissive>
        </material> <!-- End wheel material -->
        <geometry>
          <cylinder>
            <radius>.15</radius>
            <length>.05</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <link name="rear_right_wheel">
      <pose>-0.4 -0.525 -0.15 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>.15</radius>
            <length>.05</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <material> <!-- Wheel material -->
            <ambient>0.5 0.5 0.5 1</ambient>
            <diffuse>0.5 0.5 0.5 1</diffuse>
            <specular>0 0 0 0</specular>
            <emissive>0 0 0 1</emissive>
        </material> <!-- End wheel material -->
        <geometry>
          <cylinder>
            <radius>.15</radius>
            <length>.05</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint type="fixed" name="aruco_joint">
      <pose>0 0 0 0 0 0</pose>
      <child>aruco_marker_link</child>
      <parent>chassis</parent>
    </joint>

    <joint type="revolute" name="rear_left_wheel_joint">
      <pose>0 0 -0.03 0 0 0</pose>
      <child>rear_left_wheel</child>
      <parent>chassis</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
    
    <joint type="revolute" name="rear_right_wheel_joint">
      <pose>0 0 0.03 0 0 0</pose>
      <child>rear_right_wheel</child>
      <parent>chassis</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <joint type="revolute" name="front_left_wheel_joint">
      <pose>0 0 -0.03 0 0 0</pose>
      <child>front_left_wheel</child>
      <parent>chassis</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
    
    <joint type="revolute" name="front_right_wheel_joint">
      <pose>0 0 0.03 0 0 0</pose>
      <child>front_right_wheel</child>
      <parent>chassis</parent>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <plugin name='wheel_drive_controller' filename='libgazebo_ros_diff_drive.so'>
      <!-- wheels -->
      <num_wheel_pairs>2</num_wheel_pairs>
      <left_joint>front_left_wheel_joint</left_joint>
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>front_right_wheel_joint</right_joint>
      <right_joint>rear_right_wheel_joint</right_joint>

      <!-- kinematics -->
      <wheel_separation>1</wheel_separation>
      <wheel_diameter>0.3</wheel_diameter>
      <max_wheel_torque>20.0</max_wheel_torque>
      <max_wheel_acceleration>10.0</max_wheel_acceleration>

      <!-- odometry  --> 
      <odometry_frame>map</odometry_frame>
      <robot_base_frame>chassis</robot_base_frame>
      <command_topic>cmd_vel</command_topic>

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <update_rate>100.0</update_rate>
    </plugin>
  </model>
</sdf>
